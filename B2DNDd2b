#include <stdio.h>
#include <math.h>
#include <conio.h>
#include <windows.h>
int convertBinaryToDecimal(long long n);
long long convertDecimalToBinary(int n);
int main()
{
    long long n;
    int m;
                                                            system("clear");
    //clrscr();
    printf("Enter a binary number: ");
    scanf("%lld", &n);
    printf("\n %d in binary = %d in decimal", n, convertBinaryToDecimal(n));

    printf("\n Enter a decimal number: ");
    scanf("%d", &m);
    printf("%d in decimal = %lld in binary", m, convertDecimalToBinary(m));


return 0;
getch();
}

int convertBinaryToDecimal(long long n)
{
    int decimalNumber = 0, i = 0, remainder;
    while (n!=0)
    {
	remainder = n%10;
	n /= 10;
	decimalNumber += remainder*pow(2,i);
	++i;
    }       getch();
    return decimalNumber;
}

long long convertDecimalToBinary(int m)
{
    long long binaryNumber = 0;
    int remainder, i = 1, step = 1;

    while (m!=0)
    {
	remainder = m%2;
	printf("Step %d: %d/2, Remainder = %d, Quotient = %d\n", step++, m, remainder, m/2);
	m /= 2;
	binaryNumber += remainder*i;
	i *= 10;
    }
    getch();
    return binaryNumber;
}
